extends ../layout.pug

block content
  a.btn.btn-primary.mt-3(href='/my/new-post') Write New Post
  if posts.length > 0
    table.table.w-100.mt-4
      thead
        tr
          th Title
          th.d-flex.justify-content-end Actions
      tbody
        for post in posts
          tr
            td= post.title
            td.d-flex.justify-content-end
              a(href=`posts/${post.id}`).btn.btn-primary.btn-block.m-1 Edit
              form(action=`/my/posts/${post.id}?_method=DELETE` method='post')
                button.btn.btn-danger.m-1(type='submit') Delete
  else if posts.length === 0
    h3.mt-3 Write your first post
